<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.Energy" parent="AppTheme" />

    <!-- Cambia el color de DrawerArrow del NavigationView -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <!-- Estilos del SearchView -->
    <style name="SearchView">
        <item name="floatingSearch_clearBtnColor">@color/colorPrimary</item>
        <item name="floatingSearch_leftActionColor">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>