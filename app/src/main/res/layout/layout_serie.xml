<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/cardview_pelicula_width"
    android:layout_height="@dimen/cardview_pelicula_height"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardElevation="@dimen/elevation_cardview_series"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/poster_serie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/titulo_serie"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/black_transparent"
        android:gravity="center"
        android:textColor="@color/colorTextLight"
        android:textStyle="bold" />

</android.support.v7.widget.CardView>