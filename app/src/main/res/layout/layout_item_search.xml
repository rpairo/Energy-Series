<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_search_height"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardElevation="@dimen/cardview_series_elevation"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/backdrop_serie_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/titulo_serie_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_series_title_height"
        android:layout_gravity="bottom"
        android:background="@color/black_transparent"
        android:gravity="center"
        android:textColor="@color/colorTextLight"
        android:textStyle="bold" />

</android.support.v7.widget.CardView>