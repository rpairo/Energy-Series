<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_search_height"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardElevation="@dimen/cardview_series_elevation"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/backdrop_capitulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_series_title_height"
        android:layout_gravity="bottom"
        android:background="@color/black_transparent"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/titulo_capitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:textColor="@color/colorTextLight"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fecha_capitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/titulo_capitulo"
            android:layout_margin="2dp"
            android:textColor="@color/colorTextLight"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valoracion_capitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:textColor="@color/colorTextLight"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icono_valoracion"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@+id/valoracion_capitulo" />

    </RelativeLayout>

</android.support.v7.widget.CardView>